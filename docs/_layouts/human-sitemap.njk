---
layout: default.njk
---
{% set navPages = collections.all | eleventyNavigation %}
{% include "page-title.njk" %}

<div class="content-container mb-0">
  {% for entry in navPages %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <h2 class="h4 mt-5">
          <a class="text-decoration-none d-flex" href="{{ entry.url | url }}">{{ entry.title }}</a>
        </h2>
        <p class="lead">{{ entry.excerpt }}</p>
      </div>
    </div>
    {% if entry.children.length > 0 %}
    <div class="row">
      {% for child in entry.children %}
      <div class="col-12 col-sm-6 col-lg-3 mb-4">
        <div class="card shadow-none border-0">
          <div class="card-body">
            <p class="p mb-0">
              <a class="text-decoration-none stretched-link" href="{{ child.url | url }}">{{ child.title }}</a>
            </p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
  {% if not loop.last %}
  <hr class="minor my-3">
  {% endif %}
  {% endfor %}
</div>

<div class="bg-secondary">
  <div class="container">
    <div class="row align-items-center" style="height: 344px;">
      <div class="col-12 text-center">
        <p class="h2 mb-6 ">Start using Pelican.</p>
        <a href="/get-started" class="btn btn-white btn-lg">Get started</a>
      </div>
    </div>
  </div>
</div>
