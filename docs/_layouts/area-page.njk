---
layout: default.njk
---

{% include "page-title.njk" %}
<div class="container-fluid">
  <div class="row">
    {%- set navPages = collections.all | eleventyNavigation %}
    {%- for entry in navPages %}
      {%- if entry.url in page.url %}
        {%- for child in entry.children %}
          <div class="col-12 col-lg-6 col-xl-4 mb-6">
            <div class="card h-100">
              <div class="card-body d-flex flex-column">
                {%- if child.img %}
                <img alt="" src="{{ child.img }}" class="img-fluid mb-6 gray-hover-color" aria-hidden="true"/>
                {%- endif %}
                <h2 class="h5 mb-6">{{ child.title }}</h2>
                <p class="mb-0">{{ child.excerpt }}</p>
                <a href="{{ child.url }}" class="btn btn-outline-ui-priority mt-auto align-self-start">
                Read More<span class="fas fa-arrow-right ml-1" aria-hidden="true"></span>
                </a>
              </div>
            </div>
          </div>
        {%- endfor %}
      {%- endif %}
    {%- endfor %}
  </div>
</div>
