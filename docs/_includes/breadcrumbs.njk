{% set crumbs = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key, { includeSelf: true }) %}
<nav class="breadcrumb-wrapper" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="{{ '/' | url }}">
        <span class="fas fa-home" aria-hidden="true"></span>
        <span class="sr-only">Home</span>
      </a>
    </li>
    {%- for crumb in crumbs %}
      {% if crumb.key == eleventyNavigation.key %}
        <li class="breadcrumb-item active" aria-current="page">
          {{ crumb.title }} <span class="fas fa-eye" aria-hidden="true"></span>
        </li>
      {% else %}
          <li class="breadcrumb-item">
            <a href="{{ crumb.url | url }}">
              {{ crumb.title }}
            </a>
          </li>
      {% endif %}
    {% endfor %}
  </ol>
</nav>
