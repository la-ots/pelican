<nav id="site-nav" class="site-nav">
    <div class="site-nav-content">
      <div class="site-nav-brand">
        <a href="{{ '/' | url }}" class="me-auto">
          <img src="/img/favicon.png" class="d-none d-md-inline me-1" alt="Pelican Design System icon"/><span class="d-none d-md-inline">Pelican <span class="visually-hidden">Home</span></span>
        </a>
      </div>
      <div class="site-nav-menu">
        {% set navPages = collections.all | eleventyNavigation %}
        <ul>
        {%- for entry in navPages %}
          <li class="site-nav-item">
            <div class="site-nav-dropdown-header">
              <a class="site-nav-nav-item" href="{{ entry.url | url }}">
                <span>{{ entry.title }}</span>
              </a>              
              {% if entry.children.length > 0 %}
                <a class="site-nav-dropdown-header-expand{% if entry.url in page.url %} active {% endif %}" href="javascript://" role="button">
                  <span class="visually-hidden">
                    See guidance for items in {{ entry.title }}
                  </span>
                  <span class="fas fa-fw fa-angle-right" aria-hidden="true"></span>
                </a>
              {% endif %}
            </div>
            {% if entry.children.length > 0 %}
            <div class="site-nav-submenu" {% if entry.url in page.url %} style="display:block" {% endif %}>
              <ul>
                {% for child in entry.children %}
                  <li {% if child.url == page.url %} class="site-nav-item active" {% else %} class="site-nav-item" {% endif %}>
                    <a {% if child.url == page.url %} class="site-nav-nav-item active" {% else %} class="site-nav-nav-item" {% endif %} href="{{ child.url | url }}">
                      <span {% if child.url == page.url %} class="fas fa-fw fa-eye me-1" {% else %} class="fas fa-fw fa-eye invisible me-1" {% endif %} aria-hidden="true"></span><span>{{ child.title }}</span>
                    </a>
                  </li>
                {% endfor %}                
              </ul>
            </div>
            {% endif %}
          </li>
        {%- endfor %}
        </ul>
      </div>
    </div>
  </nav>
  