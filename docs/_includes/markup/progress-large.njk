<div class="progress-steps">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-9 col-md-10">
        <div class="progress-set">
          <div class="progress-current">
            <div class="progress-current-digit">X</div>
          </div>
          <p class="progress-current-text ">
            <small class="progress-current-text-sequence">Step X of X steps</small>
            <span class="progress-current-text-description">Description of Step</span>
          </p>
        </div>
      </div>
      <div class="col-3 col-md-2 progress-steps-buttons">
        <a href="#" class="btn btn-outline-primary ">
          <span class="fas fa-arrow-left" aria-hidden="true"></span>
          <span class="visually-hidden">Go back one step.</span>
        </a>
        <a href="#" class="btn btn-outline-primary">
          <span class="fas fa-arrow-right" aria-hidden="true"></span>
          <span class="visually-hidden">Go forward one step.</span>
        </a>
      </div>
    </div>
  </div>
</div>
