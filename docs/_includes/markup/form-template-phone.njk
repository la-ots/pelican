<div class="content-container">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="h2">
                    <span class="fas fa-phone"></span> Phone Numbers
                </h2>
                <p>Add as many phone numbers as you need. These phone numbers must be able to receive text messages.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body">
                        <p class="card-title">CardLabelHere</p>
                        <p class="mb-0">Card Value Here</p>
                        <small>Card Meta Here</small>
                        <button class="btn btn-link btn-card-edit">
                            <span class="fas fa-pencil-alt"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body">
                        <p class="card-title">CardLabelHere</p>
                        <p class="mb-0">Card Value Here</p>
                        <small>Card Meta Here</small>
                        <button class="btn btn-link btn-card-edit">
                            <span class="fas fa-pencil-alt"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-4">
                {% include markup/button-add-data.njk %}
            </div>
        </div>
        <div class="row mt-6">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
						<p class="card-title">Add a Phone Number</p>
                        <div class="row">
                            <div class="col-12 col-md-6 col-xl-4">
                                <div class="mb-4">
                                    <label for="PhoneLabel">Phone Number Label</label>
                                    <select class="form-select" id="PhoneLabel">
                                        <option selected>&mdash; Select a Label for this Phone Number &mdash;</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-xl-3">
                                <div class="mb-4">
                                    <label for="PhoneNum">Phone Number</label>
                                    <input type="tel" class="form-control" id="PhoneNum">
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-xl-2">
                                <div class="mb-4">
                                    <label for="PhoneExt">Extension</label>
                                    <input type="tel" class="form-control" id="PhoneExt">
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-xl-3">
                                <div class="mb-4">
                                    <label for="PhoneLang">Language</label>
                                    <select class="form-select" id="PhoneLang">
                                        <option selected>&mdash; Select Language &mdash;</option>
                                        <option value="PreferredLanguage">Use my preferred language</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 d-flex">
                                <button class="btn btn-primary">
                                    <span class="fas fa-check"></span> Save
                                </button>
                                <button class="btn btn-outline-ui ms-2">Cancel</button>
                                <button class="btn btn-link ms-auto">
                                    <span class="fas fa-trash text-danger"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
